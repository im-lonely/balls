{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "js",
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
